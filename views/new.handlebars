<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="row w-25 justify-content-center align-items-center">
      <form class="col-12 row justify-content-center mt-5" method="POST" action="/">
        <div class="col-12 text-center" style="font-size: 1.4rem;">請輸入你的支出</div>
        <input type="text" class="col-12 mt-4 p-2" name="name" value="" required>
        <input type="date" class="col-12 mt-4 p-2" name="date" value="" required>
        <select name="category" style="width: 30rem;" class="col-12 mt-4 p-2" required>
          <option value="">類別</option>

          {{#each category}}
          <option value="{{this.category}}">{{this.category}}</option>
          {{/each }}
          
        </select>
        <input type="number" min="1" max="1000000" class="col-12 mt-4 p-2" name="amount" value="" required>
        <button type="submit" class="btn btn-primary col-12 mt-4 p-2">新增支出</button>
        <div style="position: absolute; left: -150px; top: 0px; font-size: 1rem; color:red;">*必填欄位</div>
        <div style="position: absolute; left: -150px; top: 60px; font-size: 1.4rem">名稱* :</div>
        <div style="position: absolute; left: -150px; top: 130px; font-size: 1.4rem">日期* :</div>
        <div style="position: absolute; left: -150px; top: 195px; font-size: 1.4rem">類別* :</div>
        <div style="position: absolute; left: -150px; top: 260px; font-size: 1.4rem">金額* :</div>
      </form>
    </div>
  </div>
</div>